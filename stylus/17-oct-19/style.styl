*
    padding: 0
    margin: 0
    box-sizing: border-box

.main
    background-color: #333333
    font-family: Arial, Helvetica, sans-serif
    color:#f4f4f4
    height: 1500px

.video-container
    display: flex
    flex-direction: column
    margin: 100px auto 20px
    padding: 1.2rem
    padding-bottom: 0;
    width: 70%
    &__video
        width:90%
    &__name
        font-size: 2rem
        font-weight: bold
        line-height: 1
        padding-left: 20px
        margin-top: 1rem
.user
    width: 60%
    margin: auto
    display: flex
    flex-wrap: wrap
    &__avatar
        width: 10%
    &__data
        width: 90%
        padding-left: 20px

.user-data
    &__name
        font-size: 1.2rem
        margin-bottom: 10px











